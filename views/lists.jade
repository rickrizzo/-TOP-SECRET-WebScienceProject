div(ng-controller="listCtrl")
  
  // Input Food
  form.lists
    h2 What are you going to eat?
    input(type='text' ng-model='query.text' required)
    button(ng-click='getFood()') Search

  // Search Results
  section(id='results')

    // No Results
    div(ng-show='noresults')
      h2 No Results
    
    // Page Controls
    div(class='pagectrl' ng-hide='numPages() == 0')
      button(ng-disabled='currentPage == 0' ng-click='currentPage = currentPage - 1') Previous
      span {{ currentPage + 1 }} / {{ numPages() }}
      button(ng-disabled='currentPage >= entries.length/pageSize - 1' ng-click='currentPage = currentPage + 1') Next
    
    // Search Results
    ul
      li(ng-repeat='entry in entries | pages:currentPage * pageSize | limitTo:pageSize' ng-click='toggleFood(entry)' ng-class='{true: "selected"}[entry.added]') {{entry.food}}
    
    // Page Controls
    div(class='pagectrl' ng-hide='numPages() == 0')
      button(ng-disabled='currentPage == 0' ng-click='currentPage = currentPage - 1') Previous
      span {{ currentPage + 1 }} / {{ numPages() }}
      button(ng-disabled='currentPage >= entries.length/pageSize - 1' ng-click='currentPage = currentPage + 1') Next

  // Nutrition Chart
  div(class='chart' ng-show='!isEmpty(groceryList)')

  // Ingredients
  div(ng-show='!isEmpty(groceryList)')
    h2 Foods
    ul
      li(ng-repeat='item in groceryList') 
        p {{item.food}} {{item.amount}}
        button(ng-click='incrementItem(item)') +
        button(ng-click='decrementItem(item)') -


  // Nutritional Information
  section(ng-show='!isEmpty(groceryList)')
    h2 Nutritional Summary
    p Calories {{ sumNutrition('Energy') }}
    p Carbohydtates {{ sumNutrition('Carbohydrates') }}
    p Fat {{ sumNutrition('Fat') | number }}
    p Fiber {{ sumNutrition('Fiber') }}
    p Sugar {{ sumNutrition('Sugar') }}